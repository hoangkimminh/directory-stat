{
  "name": "directory-stat",
  "description": "Composable directory statistics fetcher where \"fs\" is insufficient",
  "version": "0.3.0",
  "author": "Luong Quang Manh @lqmanh",
  "bin": {
    "directory-stat": "./bin/run"
  },
  "bugs": "https://github.com/lqmanh/directory-stat/issues",
  "dependencies": {
    "@oclif/command": "^1.5.6",
    "@oclif/config": "^1.9.0",
    "@oclif/plugin-help": "^2.1.4",
    "@oclif/plugin-warn-if-update-available": "^1.5.4",
    "fast-glob": "^2.2.4"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/src"
  ],
  "homepage": "https://github.com/lqmanh/directory-stat",
  "keywords": [
    "directory",
    "stat"
  ],
  "license": "MIT",
  "main": "src/index.js",
  "oclif": {
    "bin": "directory-stat",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-warn-if-update-available"
    ],
    "warn-if-update-available": {
      "timeoutInDays": 7
    }
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/lqmanh/directory-stat.git"
  },
  "scripts": {
    "test": "echo NO TESTS"
  }
}
